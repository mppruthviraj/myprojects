
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/GeneralContents/favicon.ico" />
    <title>ABB India case studies</title>
    <link href="@Url.Content("~/Content/GeneralContents/css/fonts.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/GeneralContents/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/GeneralContents/js/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/GeneralContents/js/jquery.min.js")" type="text/javascript"></script>
</head>
<body>
    <header class="page-header">
        <div class="brand">
            <a href="index.html" class="logo"></a>
        </div>
    </header>
    <main>
        <h1 class="text-center">Writing the future in India</h1>
        <div class="container">
            <div class="categories columns is-mobile is-multiline">

                <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/utilities.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Utilities</h3>
                                        <div class="card-action">
                                            @Html.ActionLink("View", "DisplaySubCategories", "ABBUserContent", new { categoryId = "1"},new {@class = "action action--small" })
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/industries.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Industries</h3>
                                        <div class="card-action">
                                            @Html.ActionLink("View", "DisplaySubCategories", "ABBUserContent", new { categoryId = "2" }, new { @class = "action action--small" })
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/transportation-and-infrastructure.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Transportation and infrastructure</h3>
                                        <div class="card-action">
                                            @Html.ActionLink("View", "DisplaySubCategories", "ABBUserContent", new { categoryId = "3" }, new { @class = "action action--small" })
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
</body>
</html>
