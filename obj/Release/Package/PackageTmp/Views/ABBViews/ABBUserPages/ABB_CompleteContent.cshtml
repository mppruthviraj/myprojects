@model ABB_Portal.Models.ABBEntityModels.ABBModels.ABBTestimonials
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" style="background:#fff">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/GeneralContents/favicon.ico" />
    <title>ABB India case studies - Utilities > Generation > Krishnapatnam thermal plant</title>
    <link href="@Url.Content("~/Content/GeneralContents/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/GeneralContents/js/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/GeneralContents/js/jquery.min.js")" type="text/javascript"></script>

</head>
<body style="background:#fff">
    <header class="page-header">
        <div class="brand">
            <a href="/" class="logo"></a>
        </div>
    </header>

    <section class="container">
        <div class="columns">
            <div class="column">
                <h1 style="margin-bottom:0">@Html.DisplayFor(Model => Model.Heading)</h1>
                <h2 class="title">@Html.DisplayFor(Model => Model.Title)</h2>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="columns">
            <div class="column">
                <p><strong>Customer :</strong> &nbsp;@Html.DisplayFor(Model => Model.Customer)</p>
                <p><strong>Location &nbsp;&nbsp;:</strong> &nbsp;@Html.DisplayFor(Model => Model.City)</p>
                <p><strong>Industry &nbsp;&nbsp;&nbsp;:</strong> &nbsp;@Html.DisplayFor(Model => Model.Industry)</p>
            </div>
        </div>
    </section>

    <section class="container is-clearfix mt40">
        <div class="columns">
            <div class="column">
                <h3 class="heading">Customer need</h3>
                @Html.DisplayFor(Model => Model.CustomerNeed)
            </div>

            <div class="column">
                <h3 class="heading">ABB’s solution</h3>
                @Html.DisplayFor(Model => Model.ABBSoultion)
            </div>
        </div>
    </section>

    <section class="container p30">
        @Html.ActionLink("picture gallery", "PictureGallery", "ABBUserContent", new { recordID = Model.Id }, new { @class = "action action--small is-pulled-right" })


    </section>

    <footer class="p30">
        <div class="container is-clearfix">
            <div class="row">
                @Html.ActionLink("Home", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
                @Html.ActionLink("Back", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
             </div>
        </div>
    </footer>
    
    <script>
    if (carousel) {
      carousel.init('carousel');
    }
    </script>
</body>
</html>

