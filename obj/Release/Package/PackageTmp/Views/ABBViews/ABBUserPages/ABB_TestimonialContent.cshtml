@model ABB_Portal.Models.ABBEntityModels.ABBModels.ABBTestimonials
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/GeneralContents/favicon.ico" />
    <title>ABB India case studies - Utilities > Generation > Krishnapatnam thermal plant</title>
    <script src="@Url.Content("~/Content/GeneralContents/js/jquery.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/GeneralContents/css/style.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <section class="container">
        <div class="columns is-multiline-mobile is-multiline-tablet is-gapless">
            <div class="column is-half-desktop pa40 animated fadeInDown" style="background:#fff;height:100%">
                <h2 class="headline">@Html.DisplayFor(Model => Model.Heading)</h2>
                <h3 class="title">@Html.DisplayFor(Model => Model.Title)</h3>
                <p class="lead">
                    @Html.DisplayFor(Model => Model.Description)
                </p>

                <p class="mt40">
                    <a href="@Url.Action("ReadMoreTestimonial", "ABBUserContent",new { recordId = Model.Id   })" class="action action--primary"><span>Read More</span></a>
                </p>

                <footer class="location is-pulled-right">
                    <h4 class="place">@Html.DisplayFor(Model => Model.City) </h4 >
                    <h4 class="state">@Html.DisplayFor(Model => Model.State) </h4 >
                </footer>

                <div class="is-clearfix"></div>

                <footer class="links mt400">
                    @Html.ActionLink("Home", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
                    @Html.ActionLink("Back", "DisplayTestimonials", "ABBUserContent", new { recordId = Model.Id }, new { @class = "action action--small ml25" })
                </footer>
            </div>
            <div class="column is-half-desktop animated fadeInUp">
                <figure>
                    @{
                        string[] splitImagePath = Model.ImageName.Split(',');
                        string firstImagePath = @splitImagePath[0].ToString();
                        int startIndex = firstImagePath.LastIndexOf('\\') + 1;
                        int endIndex = firstImagePath.Length - startIndex;
                        string onlyFileName = firstImagePath.Substring(startIndex, endIndex);
                        string imagePath = "~/AllImages/" + onlyFileName;

                    }
                    <img src="@Url.Content(@imagePath)" alt="">

                </figure>
            </div>
        </div>
    </section>
</body>
</html>
