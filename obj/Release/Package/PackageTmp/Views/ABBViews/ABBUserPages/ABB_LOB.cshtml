

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/GeneralContents/favicon.ico" />
    <title>ABB India case studies - Utilities > Generation</title>
    <link href="@Url.Content("~/Content/GeneralContents/css/fonts.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/GeneralContents/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/GeneralContents/js/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/GeneralContents/js/jquery.min.js")" type="text/javascript"></script>
</head>
<body>
    <header class="page-header">
        <div class="brand">
            <a href="index.html" class="logo"></a>
        </div>
    </header>
    <main>
        <h1 class="text-center">@ViewBag.Title</h1>
        <div class="container">
            <div class="columns card-450 is-mobile is-multiline">

                <div class="column is-full-mobile is-half-tablet is-half-desktop animated fadeInUp delay-1">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/utilities-generation.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Conventional</h3>
                                        <ul>
                                            @foreach (var item in ViewBag.ConventionalItems)
                                            {
                                                <li> @Html.ActionLink((string)item.RecordTitle, "DisplayTestimonials", "ABBUserContent", new { recordId = item.RecordId },null) </li>
                                            }
                                           </ul>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-full-mobile is-half-tablet is-half-desktop animated fadeInUp delay-2">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/utilities-transmission.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Renewables</h3>
                                        <ul>
                                            @foreach (var item in ViewBag.RenewableItems)
                                            {
                                                <li> @Html.ActionLink((string)item.RecordTitle, "DisplayTestimonials", "ABBUserContent", new { recordId = item.RecordId }, null) </li>
                                            }
                                        </ul>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <footer class="p60">
        <div class="container is-clearfix">
            <div class="row">
                @Html.ActionLink("Home", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
                @Html.ActionLink("Back", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
            </div>
        </div>
    </footer>
    <script src="js/jquery.min.js"></script>
</body>
</html>
