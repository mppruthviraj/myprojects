        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">List Of Testimonials</h4>
                            <div class="table-responsive m-t-40">
                                <table id="myTable" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Report ID</th>
                                            <th>Title</th>
                                            <th>City</th>
                                            <th>Category</th>
                                            <th>Sub Category</th>
                                            <th>Line Of Business</th>
                                            <th>Uploaded Picture</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(i => item.Id)</td>
                                                <td>@Html.DisplayFor(i => item.Title)</td>
                                                <td>@Html.DisplayFor(i => item.City)</td>
                                                <td>@Html.DisplayFor(i => item.Category)</td>
                                                <td>@Html.DisplayFor(i => item.SubCategory)</td>
                                                <td>@Html.DisplayFor(i => item.LineOfBusiness)</td>
                                                
                                                    @{
                                                        string[] imageNameArray = item.ImageName.Split(',');
                                                        string testToDisplay = string.Empty;
                                                        for (int l = 0; l < imageNameArray.Length; l++)
                                                        {

                                                            if (string.IsNullOrEmpty(imageNameArray[l].ToString()))
                                                            {
                                                                testToDisplay = imageNameArray[l].ToString();
                                                            }
                                                            else
                                                            {
                                                                testToDisplay = string.Join("\n", testToDisplay, imageNameArray[l].ToString());
                                                            }

                                                        }

                                                    }<td>@testToDisplay</td>
</tr>
                                        } 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <footer class="footer"> © 2017 ABB </footer>
    </div>
</div>
<!-- ============================================================== -->
<script>
    $(document).ready(function() {
        $('#myTable').DataTable();
        $(document).ready(function() {
            var table = $('#example').DataTable({
                "columnDefs": [{
                    "visible": false,
                    "targets": 2
                }],
                "order": [
                    [2, 'asc']
                ],
                "displayLength": 25,
                "drawCallback": function(settings) {
                    var api = this.api();
                    var rows = api.rows({
                        page: 'current'
                    }).nodes();
                    var last = null;
                    api.column(2, {
                        page: 'current'
                    }).data().each(function(group, i) {
                        if (last !== group) {
                            $(rows).eq(i).before('<tr class="group"><td colspan="5">' + group + '</td></tr>');
                            last = group;
                        }
                    });
                }
            });
            // Order by the grouping
            $('#example tbody').on('click', 'tr.group', function() {
                var currentOrder = table.order()[0];
                if (currentOrder[0] === 2 && currentOrder[1] === 'asc') {
                    table.order([2, 'desc']).draw();
                } else {
                    table.order([2, 'asc']).draw();
                }
            });
        });
    });
    $('#example23').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
</script>

