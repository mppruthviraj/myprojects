

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/GeneralContents/favicon.ico" />
    <title>ABB India case studies</title>
    <link href="@Url.Content("~/Content/GeneralContents/css/fonts.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/GeneralContents/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/GeneralContents/js/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/GeneralContents/js/jquery.min.js")" type="text/javascript"></script>
</head>
<body>
    <header class="page-header">
        <div class="brand">
            <a href="index.html" class="logo"></a>
        </div>
    </header>
    <main>
        <h1 class="text-center">@ViewBag.Title</h1>
        <div class="container">
            <div class="columns is-mobile is-multiline">

                <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/utilities-generation.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Generation</h3>
                                        <div class="card-action">
                                           <a href="@Url.Action("DisplayLineOfBusiness", "ABBUserContent",new { categoryId = @ViewBag.GeneraionLink })" class="action action--small"><span>View</span></a>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/utilities-transmission.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Transmission</h3>
                                        <div class="card-action">
                                            <a href="@Url.Action("DisplayLineOfBusiness", "ABBUserContent",new { categoryId =  @ViewBag.TransmissionLink })" class="action action--small"><span>View</span></a>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="column is-full-mobile is-half-tablet is-one-third-desktop">
                    <div class="card">
                        <div class="card-container">
                            <div class="card-front">
                                <figure class="card-tile">
                                    <div class="card-header">
                                        <img src="~/Content/GeneralContents/images/categories/utilities-distribution.jpg" />
                                    </div>
                                    <figcaption class="card-content">
                                        <h3 class="card-title">Distribution</h3>
                                        <div class="card-action">
                                            <a href="@Url.Action("DisplayLineOfBusiness", "ABBUserContent",new { categoryId =  @ViewBag.DistributionLink })" class="action action--small"><span>View</span></a>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <footer class="p60">
        <div class="container is-clearfix">
            <div class="row">
                @Html.ActionLink("Home", "Index", "ABBUserContent", null,new {@class = "action action--small ml25" })
                @Html.ActionLink("Back", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
            </div>
        </div>
    </footer>
    <script src="js/jquery.min.js"></script>
</body>
</html>
