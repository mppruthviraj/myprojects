@model ABB_Portal.Models.ABBEntityModels.ABBModels.ABBTestimonials
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" style="background:#fff">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
    <title>ABB India case studies - Utilities > Generation > Krishnapatnam thermal plant</title>
    <link href="@Url.Content("~/Content/GeneralContents/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/GeneralContents/js/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/GeneralContents/js/jquery.min.js")" type="text/javascript"></script>

</head>
<body style="background:#fff">

    <section class="container p30">
        <section class="BrandGuidelineCarousel" id="carousel">
            <div class="BrandGuidelineCarousel-stageOuter">
                <ul class="BrandGuidelineCarousel-stage">                    
                    @{
                        List<string> splitImagePath = Model.ImageName.Split(',').ToList() ;
                        bool activeDoneFlag = false;
                        foreach (var item in splitImagePath)
                        {
                            string imagePath = item.ToString();
                            int startIndex = imagePath.LastIndexOf('\\') + 1;
                            int endIndex = imagePath.Length - startIndex;
                            string onlyFileName = imagePath.Substring(startIndex, endIndex);
                            string fullPath = "~/AllImages/" + onlyFileName;
                            if (!activeDoneFlag)
                            {
                                <li class="BrandGuidelineCarousel-item active">
                                    
                                    <img src="@Url.Content(@fullPath)" alt="">
                                </li>
                            }
                            else
                            {
                                <li class="BrandGuidelineCarousel-item">
                                    <img src="@Url.Content(@fullPath)" alt="">
                                </li>
                            }
                            @Html.DisplayFor(x => item, "FooTemplate")
                        }
                    }
                  
                </ul>
            </div>
            <div class="BrandGuidelineCarousel-controls">
                <div class="BrandGuidelineCarousel-navs">
                    <div class="prev BrandGuidelineCarousel-button">
                        <span class="BrandIcons BrandIcons-left"></span>
                    </div>
                    <div class="next BrandGuidelineCarousel-button">
                        <span class="BrandIcons BrandIcons-right"></span>
                    </div>
                </div>
                <div class="BrandGuidelineCarousel-dots"></div>
            </div>
        </section>
    </section>

    <footer>
        <div class="container is-clearfix">
            <div class="row">
                @Html.ActionLink("Home", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
                @Html.ActionLink("Back", "Index", "ABBUserContent", null, new { @class = "action action--small ml25" })
            </div>
        </div>
    </footer>
    <script>
    if (carousel) {
      carousel.init('carousel');
    }
    </script>
</body>
</html>

